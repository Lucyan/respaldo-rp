<div class="center hero-unit">
  	<h1>Bots en el Sistema</h1>
	<% if flash[:notice] %>
      	<p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <table>
    	<tr>
    		<th>Nombre</th>
    		<th>Cuenta Twitter</th>
    		<th>Palabras</th>
            <th>Ciudades</th>
            <th>Se han seguido</th>
            <th>Han seguido de vuelta</th>
    		<th>Acciones</th>
    	</tr>
    	<% @bots.each do |bot| %>
	    	<tr>
	    		<td><%= bot.nombre %></td>
	    		<td><%= link_to "@"+bot.tw_cuenta, "http://twitter.com/"+bot.tw_cuenta %></td>
	    		<td><%= bot.palabras.length %></td>
                <td><%= bot.botCiudads.length %></td>
                <td><%= bot.siguiendo %></td>
                <td><%= bot.seguidores %></td>
	    		<td>
                    <div class="btn-toolbar">
                        <div class="btn-group">
                            <%= link_to "Palabras", bot_palabras_path(bot), class: "btn" %>
                            <%= link_to "Ciudades", bot_ciudades_path(bot), class: "btn" %>
                            <%= link_to "Tweets", bot_tweets_path(bot), class: "btn" %>
                            <%= link_to "Eliminar", bot_eliminar_path(bot), class: "btn" %>
                        </div>
                    </div>
                </td>
	    	</tr>
	    <% end %>
    </table>
</div>