<% provide(:title, 'Nuevo') %>
<div class="center hero-unit">
  	<h1>Nuevo Bot</h1>

  	<div class="form_puntos origen">
		<%= form_for @bot, :url => bot_nuevo_path do |form| %>
			<fieldset class="fields">
				<div class="field control-group">
					<%= form.label :nombre %>
					<%= form.text_field :nombre %>
				</div>

				<div class="field control-group numero">
					<%= form.label :tw_cuenta, "Cuenta Twitter" %>
					<%= form.text_field :tw_cuenta %>
				</div>

				<div class="field control-group interseccion">
					<%= form.label :tw_token, "Twitter Token" %>
					<%= form.text_field :tw_token %>
				</div>

				<div class="field control-group">
					<%= form.label :tw_secret, "Twitter Secret" %>
					<%= form.text_field :tw_secret %>
				</div>
			</fieldset>

			<fieldset class="actions">
				<%= form.submit "Agregar", class: "btn btn-large btn-primary" %>
			</fieldset>
		<% end %>
	</div>
</div>