<% provide(:title, 'Bot Tweets') %>
<div class="center hero-unit">
  	<h1>Personas seguidas por el Bot <%= @bot.nombre %></h1>

	<% if flash[:notice] %>
      	<div class="notice">
      		<p><%= flash[:notice] %><p>
      	</div>
    <% end %>

    <table>
    	<tr>
    		<th>Usuario</th>
            <th>Tweet</th>
            <th>Location</th>
            <th>Creado</th>
            <th>Seguido</th>
            <th>Palabra</th>
            <th>Estado</th>
            <th>Acciones</th>
    	</tr>
	    <% @bot.tweets.reverse.each do |tweet| %>
	    	<tr>
	    		<td><%= tweet.tw_usuario %></td>
                <td><%= tweet.tw_text %></td>
                <td><%= tweet.tw_location %></td>
                <td><%= tweet.tw_created_at %></td>
                <td><%= tweet.created_at %></td>
                <td><%= tweet.palabra %></td>
                <td><%= tweet.estado %></td>
	    		<td>
	    			<div class="btn-toolbar">
                        <div class="btn-group">
                            <%= link_to "Unfollow", '#', class: "btn btn-mini btn-inverse" %>
                        </div>
                    </div>
                </td>
	    <% end %>
	</table>
</div>